{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "diagnostics": true,
        "downlevelIteration": false,
        "lib": ["es5", "es6", "dom"],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": true,
        "target": "es5"
    },
    "include": [
        "typings/**/*.d.ts",
        "src",
        "bin",
        "browser"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "test/typescript"
    ]
}
